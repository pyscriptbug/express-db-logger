{
  "name": "express-db-logger",
  "version": "0.0.1",
  "description": "Persisted logs for Express, works with RESTful applications and Apollo's GraphQL APIs.",
  "main": "lib/index.js",
  "scripts": {
    "test": "jest --config jest.json",
    "build": "tsc --build",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pyscriptbug/express-db-logger.git"
  },
  "keywords": [
    "express",
    "logger",
    "database",
    "graphql",
    "apollo",
    "rest",
    "api"
  ],
  "author": "Catriel Guillen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pyscriptbug/express-db-logger/issues"
  },
  "homepage": "https://github.com/pyscriptbug/express-db-logger#readme",
  "devDependencies": {
    "@types/jest": "^28.1.3",
    "jest": "^28.1.1",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "axios": "^0.27.2"
  }
}
